@model IEnumerable<ToolDepot.Domain.Products.ProductCategory>

@{
    ViewBag.Title = "AllCategories";
}

<h2>AllCategories</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFeaturedCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryAvatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFeaturedCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryAvatar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
