@model IEnumerable<ToolDepot.Domain.Products.Product>

@{
    ViewBag.Title = "Category";
}
@foreach (var item in Model)
{
    <div class="span4 align-center">
        <img src="@item.ProductImage" style="height: 145px;width: 145px;"/>
        <div class=""></div>
        <div class="margin-top-10 margin-bottom-10">
            @item.BrandName - @item.Name
        </div>
        <a href="#" class="btn btn-primary">See More</a>
    </div>
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFeaturedProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductImage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFeaturedProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
