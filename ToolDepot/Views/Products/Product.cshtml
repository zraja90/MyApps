@model ToolDepot.Core.Domain.Products.Product

@{
    ViewBag.Title = @Model.Name;
}

<img src="@Model.Image" class="img-rounded pull-left" alt="@Model.Name"/>
<div class="pull-left">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    Stars and Rating
</div>

<div class="clearfix"></div>

<div class="display-label">
Product Description
</div>
<div class="display-field">
    @Html.DisplayFor(model => model.Description)
</div>

<ul class="nav nav-tabs" id="descriptionTags">
    <li>
        <a href="#specs">Specifications
        </a>
    </li>
    <li>
        <a href="#features">Features
        </a>
    </li>
</ul>
<div class="tab-content"  id="tabContent">
    <div class="tab-pane" id="specs">Specs</div>
    <div class="tab-pane" id="features">Features</div>
</div>

