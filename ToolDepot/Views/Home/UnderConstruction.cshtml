@model ToolDepot.Models.Products.UnderConstructionModel

@{
    ViewBag.Title = "Tool Depot | Tool & Equipment Rental | Repair Services";
    ViewBag.Description = "Tool Rentals, Equipment Rentals, Tool Sales, Equipment Sales, Repair Services, Hardware, Machinery Tools, Power Tools, Boom Lift";
    ViewBag.Keywords = "Tool Rentals, Equipment Rentals, Tool Sales, Equipment Sales, Repair Services, Hardware, Machinery Tools, Power Tools, Boom Lift";
}

<div id="homePage">
    
    <div class="alert alert-info span4 hide">
        <h3>Subscribe</h3>
        <p>Get all the latest updates on the latest rental equipment</p>
        @using (Html.BeginForm())
        {
            <div class="form">
                <fieldset>
                    <legend class="hide"></legend>
                    @Html.TextBoxFor(m => m..EmailAddress, new { placeholder = "Enter Your Email Address", type = "email", required = "" })
                    @Html.ValidationMessageFor(m => m.UnderConstruction.EmailAddress)
                    <input type="submit" class="btn btn-primary" value="Submit">
                </fieldset>
            </div>
        }
    </div>
    <div class="clearfix"></div>
</div>


    @Html.Action("ProductCategories")


<div id="myCarousel" class="carousel slide span9">
    <!-- Carousel items -->
    <div class="carousel-inner">
        @* No Loop *@
        <div class="item">
            <img src="/Content/css/images/BoschDrill.jpg"/>
            <div class="carousel-caption">
                <h4>Bosch</h4>
                <p>Description</p>
            </div>
        </div>
        <div class="item">
            <img src="/Content/css/images/BoschDrill.jpg"/>
            <div class="carousel-caption">
                <h4>Makita</h4>
                <p>Description</p>
            </div>
        </div>
        <div class="item">
            <img src="/Content/css/images/BoschDrill.jpg"/>
            <div class="carousel-caption">
                <h4>Boom</h4>
                <p>Description</p>
            </div>
        </div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>

<div class="span12">
    @Html.Action("FeaturedProductCategory")
    
</div>
<script>
    $(".carousel-inner .item:first-child").addClass("active");
</script>