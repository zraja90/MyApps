@model ToolDepot.Areas.Admin.Models.AllProductsListModel

@{
    ViewBag.Title = "Index";
}

<h2>All Products</h2>
<div class="margin-bottom">
@Html.ActionLink("Create New Product", "Create", null,new {Class="btn margin-right-10"})
@Html.ActionLink("Create New Category", "CreateCategory",null, new {Class="btn"})
    </div>
<table class="table table-hover table-striped">
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Is Featured</th>
        <th>Category Name</th>
        <th>Date Created</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.Products)
    {
    
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Image
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.IsFeatured
            </td>
            <td>
                @item.Category.CategoryName
            </td>
            <td>
                @item.CreatedDate.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
